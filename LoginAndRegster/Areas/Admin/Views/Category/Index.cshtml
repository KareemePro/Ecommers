@model IEnumerable<Category>
@{
    ViewData["Title"] = "product type";
}

<div class="row mt-2">
    <div class="col-6">
        <h3 class="text-black">Product Type List</h3>
    </div>
    <div class="col-6 text-right d-flex justify-content-end">
        <a asp-action="Create" class="btn btn-dark text-white btn-lg">Add  category</a>
    </div>
</div>
@if(!Model.Any()){
    <div class="alert alert-primary mt-3" role="alert" bis_skin_checked="1">
        This is a primary alert—check it out!
    </div>
}
else
{
    <div class="mt-3">
        <table class="table table-borderless table-data3">
            <thead>
                <tr class="">
                    <th>
                        Product Type
                    </th>
                    <th class="text-center">
                        Action
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
                
            
           
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td class="text-center">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                    <td>

                    </td>
                </tr>
            }

        </table>
    </div>    
}
   
