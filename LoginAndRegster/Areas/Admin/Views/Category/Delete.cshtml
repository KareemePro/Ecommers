@model Category
@{
    ViewData["Title"] = "Delete Product Type";
}

<h2 class="text-info mt-5">Delete Product Type</h2>
<div class="p-4 rounded border mt-3">
    <form asp-action="Delete" method="post">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" value="@Model.Name" disabled class="form-control" />
            </div>
            <div class="mt-3">
                <input type="submit" class="btn btn-primary" value="Delete" />
                <a asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </div>
    </form>
</div>
