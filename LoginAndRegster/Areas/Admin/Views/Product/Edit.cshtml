@model EditProductViewModel
@{
    ViewData["Title"] = "Edit Product";
}


<div class="card">
    <div class="card-header">
        Edit product
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            
            <div class="row">
                <div class="col-5">
                    <div class="row">
                        <div class="col-3">
                            <label asp-for="Name" class="form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Name" class="form-control " />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-3">
                            <label asp-for="Price" class="form-label"></label>
                        </div>
                        <div class="col-8">

                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-3">
                            <label asp-for="ProductColor" class="form-label"></label>
                        </div>
                        <div class="col-8">

                            <input asp-for="ProductColor" class="form-control" />
                            <span asp-validation-for="ProductColor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-3">
                            <label asp-for="CategoryId" class="form-label"></label>
                        </div>
                        <div class="col-8">

                            <select asp-for="CategoryId" class="form-control" asp-items="Model.Category">
                                <option value="" hidden>Select category..</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-3">
                            <label asp-for="Description" class="form-label"></label>
                        </div>
                        <div class="col-8">

                            <textarea asp-for="Description" class="form-control" placeholder="Enter Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-3">
                            <label asp-for="Image" class="form-label"></label>
                        </div>
                        <div class="col-8">

                            <input asp-for="Image" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mt-5">
                        <input type="submit" class="btn btn-primary" value="Edit" />
                        <a asp-action="Index" class="btn btn-success">Back</a>
                    </div>
                </div>
                <div class="col-7 d-flex justify-content-center overflow-hidden">
                    <img src="@($"{FileSetting.ImgaPaht}/{Model.CurrentName}")" class="image-preview" alt="image" />
                </div>

            </div>
        
        </form>

    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/admin/js/product-form.js" asp-append-version="true"></script>
}