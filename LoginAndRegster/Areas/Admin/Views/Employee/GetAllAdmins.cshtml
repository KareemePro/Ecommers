@model IEnumerable<Employee>

@if (!Model.Any())
{
    <div class="alert alert-primary mt-3" role="alert" bis_skin_checked="1">
        This is a primary alert—check it out!
    </div>
}
else
{
    
        <table class="table table-borderless table-data3">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Date of hiring</th>
                    <th>Aciton</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var admin in Model)
                {
                    <tr>
                        <td>@admin.FirstName <span>@admin.MiddleName</span></td>
                        <td>@admin.Phone</td>
                        <td>@admin.CreateDate</td>
                        <td>
                            <a class="btn btn-primary text-white">Edit</a>
                            <a class="btn btn-success text-white">Details</a>
                        <a class="btn btn-danger text-white js-delete"  data-id="@admin.UserId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
}

@section Scripts{
    <script src="~/admin/js/deleteuser.js" asp-append-version="true"></script>
}



