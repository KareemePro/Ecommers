@model Contact
<div class="row mt-5 d-flex justify-content-center">
    <div class="col-8  rounded-3 shadow bagroundwhie ">
        <div class="text-center my-4">
            <h2>Contact Us</h2>
        </div>
        <form asp-action="Create" method="post" class="my-3">
            <div class="row my-4 d-flex justify-content-center">
                <div class="col-10">
                    <div class="my-3">
                        <input asp-for="Name" class="form-control" placeholder="Your Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="my-3">
                        <input asp-for="Email" class="form-control" placeholder="Your Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="my-3">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Your Phone Number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="my-3">
                        <textarea asp-for="Message" rows="6" class="form-control" placeholder="Your Message"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-end">
                        <input  type="submit" value="Send Message" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}